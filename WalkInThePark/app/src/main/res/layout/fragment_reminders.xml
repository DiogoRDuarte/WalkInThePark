<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remindersFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemindersFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/all_reminders"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/button_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add"
        style="?attr/borderlessButtonStyle"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/button_ac_reminders"
        android:textSize="16dp"
        android:textColor="#E8E8E8"
        app:backgroundTint="#2B2C2C"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_reminders" />

</androidx.constraintlayout.widget.ConstraintLayout>